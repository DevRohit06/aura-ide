# MongoDB Configuration
DATABASE_URL=mongodb://localhost:27017/aura_intellicode
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=aura_intellicode
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Better Auth Configuration
BETTER_AUTH_SECRET=your_super_secret_better_auth_key_change_in_production
AUTH_SECRET=your_super_secret_auth_key_change_in_production
ORIGIN=http://localhost:5173
PUBLIC_ORIGIN=http://localhost:5173

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Helicone AI Gateway Configuration (handles all AI providers automatically)
HELICONE_API_KEY=your_helicone_api_key_here
HELICONE_ENABLE_CACHING=true



# Cloudflare R2 Storage Configuration
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_DEFAULT_BUCKET=aura-projects
R2_REGION=auto
R2_MAX_FILE_SIZE=100000000
R2_MULTIPART_THRESHOLD=10000000
R2_MOUNT_PATH=/home/user/project-data
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Mount Bridge Configuration
MOUNT_HEALTH_CHECK_INTERVAL=30000
MOUNT_AUTO_RECONNECT=true
MOUNT_CREDENTIALS_REFRESH_HOURS=24
MOUNT_DIAGNOSTICS_ENABLED=true
MAX_MOUNTS_PER_SANDBOX=1

# FUSE Configuration
FUSE_ALLOW_OTHER=true
FUSE_FILE_MODE=0777
FUSE_DIR_MODE=0777
FUSE_MAX_RETRIES=3
FUSE_RETRY_DELAY=1000

# Daytona Sandbox Configuration
DAYTONA_API_KEY=your_daytona_api_key_here
DAYTONA_API_URL=https://api.daytona.io
DAYTONA_TARGET=us
DAYTONA_ENABLED=true

# LangGraph AI Agent Configuration
DEFAULT_AI_MODEL=gpt-4o
ENABLE_AI_TRACING=true

# Qdrant Vector Database Configuration (optional)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here